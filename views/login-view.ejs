<%- include ("templates/header.ejs") %>
<div class="container h-100 d-flex justify-content-center align-items-center">
  <div class="col col-sm-10 col-md-9 col-lg-8">
    <div class="row text-center">
      <h1 class="admission__title">Login</h1>
      <h2 class="admission__subtitle">Login to user account</h2>
    </div>
    <form action="/login" method="post">
      <div class="row row-cols-1">
        <div class="col-12 col-sm-6">
          <div class="form-group">
            <label for="email">Email address</label>
            <input id="email" type="text" class="form-control" name="email" placeholder="your@email.com" autofocus>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" type="text" class="form-control" name="password" placeholder="S3cr3tP4ssW0rD">
          </div>
        </div>
      <div class="row">
        <div class="col text-center">
          <button type="submit" class="btn btn-lg">Login</button>
        </div>
      </div>
    </form>
    <div class="row text-center login-information">
      <div class="col">
        <p class="login-information__text">If you don't have a account, 
          <a class="login-information__link" href="/registry">Registry</a>
        !</p>
      </div>
    </div>
  </div>
</div>
<%- include ("templates/footer.ejs") %>