<%- include ("templates/header.ejs") %>
<div class="container h-100 d-flex flex-column justify-content-center">
  <div class="row justify-content-center">
    <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4 text-center">
      <h1 class="header-title">Login</h1>
      <h2 class="header-subtitle">Login to user account</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
      <form class="form" action="/login" method="post">
        <label class="form-label" for="email">Email address</label>
        <input id="email" type="text" class="form-control form-input" name="email" placeholder="your@email.com" autofocus>
        <label class="form-label" for="password">Password</label>
        <input id="password" type="password" class="form-control form-input" name="password" placeholder="your@email.com">
        <% if (success) { %>
          <div class="text-center form-validator-wrapper form-validator-success">
            <p class="form-validator-text"><%= success %></p>
          </div>
        <% } %>
        <% if (error) { %>
          <div class="text-center form-validator-wrapper form-validator-error">
            <p class="form-validator-text"><%= error %></p>
        </div>
        <% } %>
        <div class="text-center">
          <button id="btn" type="submit" class="btn btn-lg btn-look" disabled="true">Login</button>
        </div>
      </form>
    </div>
  </div>
  <div class="row justify-content-center text-center">
    <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
      <p class="login-information-text">If you don't have account, 
        <a class="login-information-link" href="/registry">Registry</a>!</p>
  </div>
  </div>
</div>
<script src="/javascripts/login-button-state.js"></script>
<%- include ("templates/footer.ejs") %>